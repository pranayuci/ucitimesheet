@page 
@model WebAppCore.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

@*<h2 class="text-center">Login</h2>*@

<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <h3 class="text-center">Reset Password</h3>
        <form asp-action="ResetPassword" method="post" class="form-horizontal">
            <input asp-for="ResetPasswordVm.Token" type="hidden" />
            <input asp-for="ResetPasswordVm.Email" type="hidden" />
            <div class="form-group">
                <label asp-for="ResetPasswordVm.Password" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ResetPasswordVm.Password" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ResetPasswordVm.ConfirmPassword" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ResetPasswordVm.ConfirmPassword" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Login">Back to Login</a>
</div>
