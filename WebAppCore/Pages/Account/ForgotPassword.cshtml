@page
@model WebAppCore.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

@*<h2 class="text-center">Login</h2>*@

<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <h3 class="text-center" style="margin-bottom:20px;">Forgot Password</h3>
        <form asp-action="ForgotPassword" method="post" class="form-horizontal text-center">
            <div class="form-group">
                <label asp-for="ForgotPasswordVm.Email" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ForgotPasswordVm.Email" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Login">Back to Login</a>
</div>
